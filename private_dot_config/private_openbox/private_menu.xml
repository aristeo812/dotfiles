<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://openbox.org/
		file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
	<item label="File manager" icon="/usr/share/icons/Papirus/22x22/apps/system-file-manager.svg">
		<action name="Execute"><execute>pcmanfm</execute></action>
	</item>
	<item label="Terminal emulator" icon="/usr/share/icons/Papirus/22x22/apps/terminal.svg">
		<action name="Execute"><execute>x-terminal-emulator</execute></action>
	</item>
	<item label="Web browser" icon="/usr/share/icons/Papirus/22x22/apps/web-browser.svg">
		<action name="Execute"><execute>x-www-browser</execute></action>
	</item>
	<item label="Emacs client" icon="/usr/share/icons/Papirus/22x22/apps/emacs.svg">
		<action name="Execute"><execute>emacsclient --reuse-frame --no-wait --alternate-editor=""</execute></action>
	</item>
	<!-- This requires the presence of the 'openbox-menu' package to work -->
	<!--  <menu id="/Debian" /> -->
	<separator label="Main Menu" />
	<menu id="applications-menu" label="Applications" icon="/usr/share/icons/Papirus/22x22/apps/applications-all.svg" execute="/usr/bin/openbox-menu lxde-applications.menu"/>
	<menu id="bookmarks-menu" label="Bookmarks" icon="/usr/share/icons/Papirus/22x22/actions/bookmark.svg" execute="/bin/bash -e ~/.scripts/ob-gtk-bookmarks.sh"/>
	<separator label="Configuration" />
	<item label="Desktop wallpaper" icon="/usr/share/icons/Papirus/22x22/apps/nitrogen.svg">
		<action name="Execute"><execute>nitrogen</execute></action>
	</item>
	<menu id="configure-openbox" label="Configure Openbox" icon="/usr/share/icons/Papirus/22x22/apps/openbox.svg">
		<item label="ObConf" icon="/usr/share/icons/Papirus/22x22/apps/obconf.svg">
			<action name="Execute"><execute>obconf</execute></action>
		</item>
		<item label="Reconfigure Openbox" icon="/usr/share/icons/Papirus/22x22/actions/configure.svg">
			<action name="Reconfigure" />
		</item>
		<item label="Restart Openbox" icon="/usr/share/icons/Papirus/22x22/apps/system-restart.svg">
			<action name="Restart" />
		</item>
		<separator />
		<item label="Edit autostart" icon="/usr/share/icons/Papirus/22x22/actions/edit.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/menu-editor.sh ~/.config/openbox/autostart</execute></action>
		</item>
		<item label="Edit menu.xml" icon="/usr/share/icons/Papirus/22x22/actions/edit.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/menu-editor.sh ~/.config/openbox/menu.xml</execute></action>
		</item>
		<item label="Edit rc.xml" icon="/usr/share/icons/Papirus/22x22/actions/edit.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/menu-editor.sh ~/.config/openbox/rc.xml</execute></action>
		</item>
	</menu>
	<menu id="configuration" label="General configuration" icon="/usr/share/icons/Papirus/22x22/actions/settings-configure.svg">
		<item label="Restart conky" icon="/usr/share/icons/Papirus/22x22/apps/conky.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/conky.sh restart</execute></action>
		</item>
		<item label="Restart tint2" icon="/usr/share/icons/Papirus/22x22/apps/tint2.svg">
			<action name="Execute"><execute>killall -SIGUSR1 tint2</execute></action>
		</item>
		<item label="Restart dunst" icon="/usr/share/icons/Papirus/22x22/apps/plugin-notification.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/restart-dunst.sh</execute></action>
		</item>
		<separator />
		<item label="Edit conky.conf" icon="/usr/share/icons/Papirus/22x22/actions/edit.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/menu-editor.sh ~/.config/conky/conky.conf</execute></action>
		</item>
		<item label="Edit tint2rc" icon="/usr/share/icons/Papirus/22x22/actions/edit.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/menu-editor.sh ~/.config/tint2/tint2rc</execute></action>
		</item>
		<item label="Edit dunstrc" icon="/usr/share/icons/Papirus/22x22/actions/edit.svg">
			<action name="Execute"><execute>/bin/sh -e ~/.scripts/menu-editor.sh ~/.config/dunst/dunstrc</execute></action>
		</item>
	</menu>
	<separator label="Exit" />
	<item label="Lock screen" icon="/usr/share/icons/Papirus/22x22/apps/system-lock-screen.svg">
		<action name="Execute"><execute>xdg-screensaver lock</execute></action>
	</item>
	<item label="Logout" icon="/usr/share/icons/Papirus/22x22/apps/system-log-out.svg">
		<action name="Exit">
			<prompt>yes</prompt>
		</action>
	</item>
	<item label="Shutdown" icon="/usr/share/icons/Papirus-Light/22x22/apps/system-shut-down.svg">
		<action name="Execute"><execute>obsession-logout</execute></action>
	</item>
</menu>

</openbox_menu>
