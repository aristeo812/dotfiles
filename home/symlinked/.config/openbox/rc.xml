<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <!-- vim: ft=xml:fm=marker:ts=2: -->
  <!--{{{ resistance -->
  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>
  <!--}}}-->
  <!--{{{ focus -->
  <focus>
    <focusNew>yes</focusNew>
    <!-- always try to focus new windows when they appear. other rules do
       apply -->
    <followMouse>no</followMouse>
    <!-- move focus to a window when you move the mouse into it -->
    <focusLast>yes</focusLast>
    <!-- focus the last used window when changing desktops, instead of the one
       under the mouse pointer. when followMouse is enabled -->
    <underMouse>no</underMouse>
    <!-- move focus under the mouse, even when the mouse is not moving -->
    <focusDelay>200</focusDelay>
    <!-- when followMouse is enabled, the mouse must be inside the window for
       this many milliseconds (1000 = 1 sec) before moving focus to it -->
    <raiseOnFocus>no</raiseOnFocus>
    <!-- when followMouse is enabled, and a window is given focus by moving the
       mouse into it, also raise the window -->
  </focus>
  <!--}}}-->
  <!--{{{ placement -->
  <placement>
    <policy>Smart</policy>
    <!-- 'Smart' or 'UnderMouse' -->
    <center>yes</center>
    <!-- whether to place windows in the center of the free area found or
       the top left corner -->
    <monitor>Primary</monitor>
    <!-- with Smart placement on a multi-monitor system, try to place new windows
       on: 'Any' - any monitor, 'Mouse' - where the mouse is, 'Active' - where
       the active window is, 'Primary' - only on the primary monitor -->
    <primaryMonitor>1</primaryMonitor>
    <!-- The monitor where Openbox should place popup dialogs such as the
       focus cycling popup, or the desktop switch popup.  It can be an index
       from 1, specifying a particular monitor.  Or it can be one of the
       following: 'Mouse' - where the mouse is, or
                  'Active' - where the active window is -->
  </placement>
  <!--}}}-->
  <!--{{{ theme -->
  <theme>
    <name>Greylooks</name>
    <titleLayout>NDLIMC</titleLayout>
    <!--
      available characters are NDSLIMC, each can occur at most once.
      N: window icon
      L: window label (AKA title).
      I: iconify
      M: maximize
      C: close
      S: shade (roll up/down)
      D: omnipresent (on all desktops).
  -->
    <keepBorder>yes</keepBorder>
    <animateIconify>yes</animateIconify>
    <font place="ActiveWindow">
      <name>Ubuntu</name>
      <size>12</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="InactiveWindow">
      <name>Ubuntu</name>
      <size>12</size>
      <!-- font size in points -->
      <weight>Normal</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="MenuHeader">
      <name>Roboto</name>
      <size>13</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="MenuItem">
      <name>Roboto</name>
      <size>13</size>
      <!-- font size in points -->
      <weight>Normal</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Ubuntu</name>
      <size>12</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Ubuntu</name>
      <size>12</size>
      <!-- font size in points -->
      <weight>Bold</weight>
      <!-- 'bold' or 'normal' -->
      <slant>Normal</slant>
      <!-- 'italic' or 'normal' -->
    </font>
  </theme>
  <!--}}}-->
  <!--{{{ desktops -->
  <desktops>
    <!-- this stuff is only used at startup, pagers allow you to change them
       during a session

       these are default values to use when other ones are not already set
       by other applications, or saved in your session

       use obconf if you want to change these without having to log out
       and back in -->
    <number>4</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
      <name>4</name>
    </names>
    <popupTime>875</popupTime>
    <!-- The number of milliseconds to show the popup for when switching
       desktops.  Set this to 0 to disable the popup. -->
  </desktops>
  <!--}}}-->
  <!--{{{ resize -->
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Nonpixel</popupShow>
    <!-- 'Always', 'Never', or 'Nonpixel' (xterms and such) -->
    <popupPosition>Center</popupPosition>
    <!-- 'Center', 'Top', or 'Fixed' -->
    <popupFixedPosition>
      <!-- these are used if popupPosition is set to 'Fixed' -->
      <x>10</x>
      <!-- positive number for distance from left edge, negative number for
         distance from right edge, or 'Center' -->
      <y>10</y>
      <!-- positive number for distance from top edge, negative number for
         distance from bottom edge, or 'Center' -->
    </popupFixedPosition>
  </resize>
  <!--}}}-->
  <!--{{{ margins -->
  <!-- You can reserve a portion of your screen where windows will not cover when
     they are maximized, or when they are initially placed.
     Many programs reserve space automatically, but you can use this in other
     cases. -->
  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>
  <!--}}}-->
  <!--{{{ dock -->
  <dock>
    <position>TopLeft</position>
    <!-- (Top|Bottom)(Left|Right|)|Top|Bottom|Left|Right|Floating -->
    <floatingX>0</floatingX>
    <floatingY>0</floatingY>
    <noStrut>no</noStrut>
    <stacking>Above</stacking>
    <!-- 'Above', 'Normal', or 'Below' -->
    <direction>Vertical</direction>
    <!-- 'Vertical' or 'Horizontal' -->
    <autoHide>no</autoHide>
    <hideDelay>300</hideDelay>
    <!-- in milliseconds (1000 = 1 second) -->
    <showDelay>300</showDelay>
    <!-- in milliseconds (1000 = 1 second) -->
    <moveButton>Middle</moveButton>
    <!-- 'Left', 'Middle', 'Right' -->
  </dock>
  <!--}}}-->
  <!-- User defined keybindings -->
  <!-- See: https://bbs.archlinux.org/viewtopic.php?pid=1082499#p1082499 -->
  <keyboard>
    <!--{{{ Applications (Super-Ctrl + letters) -->
    <!-- Super-Ctrl-B: Web Browser -->
    <keybind key="W-C-B">
      <action name="Execute">
        <command>xdg-open http://</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-C: LibreOffice Calc -->
    <keybind key="W-C-C">
      <action name="Execute">
        <command>libreoffice --calc</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-E: Emacs client -->
    <keybind key="W-C-E">
      <action name="Execute">
        <command>emacsclient --reuse-frame --no-wait --alternate-editor=""</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-F: File manager -->
    <keybind key="W-C-F">
      <action name="Execute">
        <command><![CDATA[xdg-open ~/.]]></command>
      </action>
    </keybind>
    <!-- Super-Ctrl-I: LibreOffice Impress -->
    <keybind key="W-C-I">
      <action name="Execute">
        <command>libreoffice --impress</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-O: Obconf -->
    <keybind key="W-C-O">
      <action name="Execute">
        <command>obconf</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-P: Pavucontrol -->
    <keybind key="W-C-P">
      <action name="Execute">
        <command>pavucontrol --tab=3</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-R: Tor Browser -->
    <keybind key="W-C-R">
      <action name="Execute">
        <command>torbrowser-launcher</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-S: OBS-Studio -->
    <keybind key="W-C-S">
      <action name="Execute">
        <command>obs</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-T: Terminal emulator -->
    <keybind key="W-C-T">
      <action name="Execute">
        <command>x-terminal-emulator</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-W: LibreOffice Writer -->
    <keybind key="W-C-W">
      <action name="Execute">
        <command>libreoffice --writer</command>
      </action>
    </keybind>
    <!-- Ctrl-Alt-Del: System monitor -->
    <keybind key="C-A-Delete">
      <action name="Execute">
        <command><![CDATA[/bin/sh -c -- 'if command -v mate-system-monitor ; then exec mate-system-monitor ; else exec x-terminal-emulator -e htop ; fi']]></command>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ rofi (Super-Enter + optional stuff) -->
    <!-- Super-F1: rofi calc module -->
    <keybind key="W-F1">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/start-rofi.sh calc</command>
      </action>
    </keybind>
    <!-- Super-Tab: rofi window switching module -->
    <keybind key="W-Tab">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/start-rofi.sh window</command>
      </action>
    </keybind>
    <!-- Super-Enter: rofi run -->
    <keybind key="W-Return">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/start-rofi.sh run</command>
      </action>
    </keybind>
    <!-- Super-Shift-Enter: rofi drun -->
    <keybind key="W-S-Return">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/start-rofi.sh drun</command>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ Screenshots (PrtScr + optional stuff) -->
    <!-- PrtScr: Take a screenshot (fullscreen) -->
    <keybind key="Print">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/take-screenshot-x.sh fullscreen</command>
      </action>
    </keybind>
    <!-- Alt-PrtScr: Screenshot of the current window -->
    <keybind key="A-Print">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/take-screenshot-x.sh window</command>
      </action>
    </keybind>
    <!-- Ctrl-PrtScr: Screenshot of selection -->
    <keybind key="C-Print">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/take-screenshot-x.sh selection</command>
      </action>
    </keybind>
    <!-- Super-PrtScr: Take a screenshot (fullscreen) with a 5 sec delay -->
    <keybind key="W-Print">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/take-screenshot-x.sh fullscreen delay</command>
      </action>
    </keybind>
    <!-- Super-Alt-PrtScr: Screenshot of the current window with a 5 sec delay -->
    <keybind key="W-A-Print">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/take-screenshot-x.sh window delay</command>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ Inherent Openbox stuff (reconfig, menu, etc.) -->
    <!-- Super-Shift-A: Reconfigure whole appearance -->
    <keybind key="W-S-A">
      <action name="Execute">
        <command>/bin/sh -e ~/.Scripti/reconfigure-appearance.sh</command>
      </action>
    </keybind>
    <!-- Super-Shift-C: Reconfigure Openbox -->
    <keybind key="W-S-C">
      <action name="Reconfigure"/>
      <action name="Execute">
        <command>notify-send --urgency=low 'Openbox reconfigured'</command>
      </action>
    </keybind>
    <!-- Super-Esc: Openbox main menu -->
    <keybind key="W-Escape">
      <action name="ShowMenu">
        <menu>root-menu</menu>
      </action>
    </keybind>
    <!-- Super-D: Show/hide desktop -->
    <keybind key="W-d">
      <action name="ToggleShowDesktop"/>
    </keybind>
    <!--}}}-->
    <!--{{{ Session management (logout etc.) -->
    <!-- Super-Ctrl-L: Lock screen -->
    <keybind key="W-C-L">
      <action name="Execute">
        <command>xdg-screensaver lock</command>
      </action>
    </keybind>
    <!-- Super-Ctrl-Q: Run logout dialogue -->
    <keybind key="W-C-Q">
      <action name="Execute">
        <command><![CDATA[lxsession-logout --prompt='<big><big><b>Vero exire a sessione vis?</b></big></big>']]></command>
      </action>
    </keybind>
    <!-- Super-Shift-Q: Quit from Openbox -->
    <keybind key="W-S-Q">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ Navigating between desktops (Super + digits and Super-Shift + arrows) -->
    <!-- Navigating between desktops by their numbers. I use 4 desktops btw -->
    <!-- Super-1: Go to desktop #1 -->
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <!-- Super-2: Go to desktop #2 -->
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <!-- Super-3: Go to desktop #3 -->
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <!-- Super-4: Go to desktop #4 -->
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <!-- Navigating between desktops relatively -->
    <!-- Super-Ctrl-Left: Move to the desktop to the left -->
    <keybind key="W-C-Left">
      <action name="GoToDesktop">
        <to>left</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Ctrl-Right: Move to the desktop to the right -->
    <keybind key="W-C-Right">
      <action name="GoToDesktop">
        <to>right</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Ctrl-Up: Move to the desktop above -->
    <keybind key="W-C-Up">
      <action name="GoToDesktop">
        <to>up</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Ctrl-Down: Move to the desktop below -->
    <keybind key="W-C-Down">
      <action name="GoToDesktop">
        <to>down</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ Moving windows between desktops (Super-Shift + arrows and digits) -->
    <!-- Move the window to a desktop by its number (Win-Shift + digit) -->
    <!-- Super-Shift-1: Move the window to desktop #1 (and switch to it) -->
    <keybind key="W-S-1">
      <action name="SendToDesktop">
        <to>1</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Shift-2: Move the window to desktop #2 (and switch to it) -->
    <keybind key="W-S-2">
      <action name="SendToDesktop">
        <to>2</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Shift-3: Move the window to desktop #3 (and switch to it) -->
    <keybind key="W-S-3">
      <action name="SendToDesktop">
        <to>3</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Shift-4: Move the window to desktop #4 (and switch to it) -->
    <keybind key="W-S-4">
      <action name="SendToDesktop">
        <to>4</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Move the window to an adjacent desktop (Win-Shift + arrows) -->
    <!-- Super-Shift-Left: Move the window to the desktop to the left (and switch to it) -->
    <keybind key="W-S-Left">
      <action name="SendToDesktop">
        <to>left</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Shift-Right: Move the window to the desktop to the right (and switch to it) -->
    <keybind key="W-S-Right">
      <action name="SendToDesktop">
        <to>right</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Shift-Up: Move the window to the desktop above (and switch to it) -->
    <keybind key="W-S-Up">
      <action name="SendToDesktop">
        <to>up</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!-- Super-Shift-Down: Move the window to the desktop below (and switch to it) -->
    <keybind key="W-S-Down">
      <action name="SendToDesktop">
        <to>down</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ Window handling (close, maximize, etc.) -->
    <!-- Alt-F4: Close window -->
    <keybind key="A-F4">
      <action name="Close"/>
    </keybind>
    <!-- Alt-Esc: Drown the window into the bottom of the stack -->
    <keybind key="A-Escape">
      <action name="Lower"/>
      <action name="FocusToBottom"/>
      <action name="Unfocus"/>
    </keybind>
    <!-- Alt-Space: Show window's context menu -->
    <keybind key="A-space">
      <action name="ShowMenu">
        <menu>client-menu</menu>
      </action>
    </keybind>
    <!-- Super-F: Toggle fullscreen -->
    <keybind key="W-F">
      <action name="ToggleFullscreen"/>
    </keybind>
    <!-- Super-I: Iconify current window -->
    <keybind key="W-I">
      <action name="Iconify"/>
    </keybind>
    <!-- Super-M: Toggle maximize -->
    <keybind key="W-M">
      <action name="ToggleMaximize"/>
    </keybind>
    <!-- Super-O: Toggle omnipresent -->
    <keybind key="W-O">
      <action name="ToggleOmnipresent"/>
    </keybind>
    <!-- Super-Q: Close window -->
    <keybind key="W-Q">
      <action name="Close"/>
    </keybind>
    <!--}}}-->
    <!--{{{ Switching between windows (Alt-Tab etc.) -->
    <!-- Alt-Tab: Switch to the next window -->
    <keybind key="A-Tab">
      <action name="NextWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <!-- Ctrl-Alt-Tab: Switch to the previous window -->
    <!-- I don't use Alt-Shift-Tab for this action because I use Alt-Shift for keyboard layout switching -->
    <keybind key="C-A-Tab">
      <action name="PreviousWindow">
        <panels>yes</panels>
        <desktop>yes</desktop>
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <!-- Switching between windows with the arrow keys. BTW I don't get how this stuff works, I just copied this from the default Openbox config, but changed the keybindings -->
    <!-- Super-Alt-Right -->
    <keybind key="W-A-Right">
      <action name="DirectionalCycleWindows">
        <direction>right</direction>
      </action>
    </keybind>
    <!-- Super-Alt-Left -->
    <keybind key="W-A-Left">
      <action name="DirectionalCycleWindows">
        <direction>left</direction>
      </action>
    </keybind>
    <!-- Super-Alt-Up -->
    <keybind key="W-A-Up">
      <action name="DirectionalCycleWindows">
        <direction>up</direction>
      </action>
    </keybind>
    <!-- Super-Alt-Down -->
    <keybind key="W-A-Down">
      <action name="DirectionalCycleWindows">
        <direction>down</direction>
      </action>
    </keybind>
    <!--}}}-->
    <!--{{{ (Semi-)Tiling (Super + arrows and Super + PgUp/PgDn/Home/End) -->
    <!-- See: https://thomashunter.name/posts/2019-01-27-treating-openbox-like-a-tiling-windowmanager -->
    <!-- Half-screen resizing of windows -->
    <!-- Super-Left: Move the window to the left half of the screen -->
    <keybind key="W-Left">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>50%</width>
        <height>100%</height>
      </action>
    </keybind>
    <!-- Super-Right: Move the window to the right half of the screen -->
    <keybind key="W-Right">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>-0</x>
        <y>0</y>
        <width>50%</width>
        <height>100%</height>
      </action>
    </keybind>
    <!-- Super-Up: Move the window to the top half of the screen -->
    <keybind key="W-Up">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>
    <!-- Super-Down: Move the window to the bottom half of the screen -->
    <keybind key="W-Down">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>-0</y>
        <width>100%</width>
        <height>50%</height>
      </action>
    </keybind>
    <!-- Quarter-screen resizing of windows (actually, I rarely use it, if ever) -->
    <!-- Super-Home: Move the window to the upper-left corner of the screen -->
    <keybind key="W-Home">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <!-- Super-PageUp: Move the window to the upper-right corner of the screen -->
    <keybind key="W-Prior">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>-0</x>
        <y>0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <!-- Super-PageDown: Move the window to the bottom-right corner of the screen -->
    <keybind key="W-Next">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>-0</x>
        <y>-0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <!-- Super-End: Move the window to the bottom-left corner of the screen -->
    <keybind key="W-End">
      <action name="Unmaximize"/>
      <action name="MoveResizeTo">
        <x>0</x>
        <y>-0</y>
        <width>50%</width>
        <height>50%</height>
      </action>
    </keybind>
    <!--}}}-->
  </keyboard>
  <!--{{{ mouse -->
  <mouse>
    <dragThreshold>1</dragThreshold>
    <!-- number of pixels the mouse must move before a drag begins -->
    <doubleClickTime>500</doubleClickTime>
    <!-- in milliseconds (1000 = 1 second) -->
    <screenEdgeWarpTime>400</screenEdgeWarpTime>
    <!-- Time before changing desktops when the pointer touches the edge of the
       screen while moving a window, in milliseconds (1000 = 1 second).
       Set this to 0 to disable warping -->
    <screenEdgeWarpMouse>false</screenEdgeWarpMouse>
    <!-- Set this to TRUE to move the mouse pointer across the desktop when
       switching due to hitting the edge of the screen -->
    <context name="Frame">
      <mousebind button="A-Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="A-Left" action="Click">
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="A-Left" action="Drag">
        <action name="Move"/>
      </mousebind>
      <mousebind button="A-Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="A-Right" action="Drag">
        <action name="Resize"/>
      </mousebind>
      <mousebind button="A-Middle" action="Press">
        <action name="Lower"/>
        <action name="FocusToBottom"/>
        <action name="Unfocus"/>
      </mousebind>
      <mousebind button="A-Up" action="Click">
        <action name="GoToDesktop">
          <to>previous</to>
        </action>
      </mousebind>
      <mousebind button="A-Down" action="Click">
        <action name="GoToDesktop">
          <to>next</to>
        </action>
